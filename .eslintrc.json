{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "ignorePatterns": [
        "src/js/libs/**",
        "dist/assets/js/**"
    ],
    "globals": {
        "app": "writable",
        "appConfig": "readonly",
        "ymaps": "readonly"
    },
    "extends": "eslint:recommended",
    "rules": {
        "strict": [
            "error",
            "global"
        ],
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "no-var": [
            "error"
        ]
    }
}